<h1>新增商品</h1>

<%= form_with model: @product,
              data: { turbo: false } do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title , class: 'border-black border-2' %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description ,class: 'border-black border-2'%>
  </div>

  <div>
    <%= form.label :price %>
    <%= form.number_field :price ,class: 'border-black border-2', min: 0 %>
  </div>

  <div>
    <%= form.submit "新增商品", class: 'bg-rose-700 text-white px-3 py-2' %>
  </div>

<% end %>
