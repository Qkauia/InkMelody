<% if product.errors.any? %>
  <section>
    <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>

<%= form_with model: product,
              data: { turbo: false } do |form| %>
  <div>
    <%= form.label :cover %>
    <%= form.file_field :cover , class: 'border-black border-2' %>
  </div>
  
  <div>
    <%= form.label :title %>
    <%= form.text_field :title , class: 'border-black border-2' %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description ,class: 'input-field'%>
  </div>

  <div>
    <%= form.label :price %>
    <%= form.number_field :price ,class: 'input-field', min: 0 %>
  </div>

  <div>
    <%= form.label :onsale %>
    <%= form.check_box :onsale ,class: 'input-field' %>
  </div>
  <div>
    <%= form.submit  class: 'bg-rose-700 text-white px-3 py-2' %>
  </div>

<% end %>
