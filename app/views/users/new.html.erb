<h1>註冊帳號</h1>
<% if @user.errors.any? %>
  <section>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>
<%= form_with model: @user, data: { turbo: false } do |f| %>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email, class: 'input-field' %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password, class: 'input-field' %>
  </div>

  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'input-field' %>
  </div>

  <div><%= f.submit class: 'bg-rose-700 text-white px-3 py-2' %></div>

<% end %>

