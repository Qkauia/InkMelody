<h1>註冊帳號</h1>
<% if @user.errors.any? %>
  <section>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>

<%= form_with model: @user, data: { turbo: false } do |f| %>
  <section class="flex flex-col gap-1">
    <div>
      <%= f.label :email, class: 'label' %>
      <%= f.email_field :email, class: 'input input-bordered' %>
    </div>

    <div>
      <%= f.label :password, class: 'label' %>
      <%= f.password_field :password, class: 'input input-bordered' %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: 'label' %>
      <%= f.password_field :password_confirmation, class: 'input input-bordered' %>
    </div>

    <div>
      <%= f.submit class: 'btn btn-primary my-1' %>
    </div>
  </section>
<% end %>

